--#include !/Cards/Card

Truce = Card:new('Truce',
                 'Stop a Mob War',
                 'Green', 1, false)

function Truce:new()
    local o = {}
    setmetatable(o, self)
    self.__index = self
    return o
end

function Truce:useScript(gameState, playerColor)
    HitList:stopMobWar()
    return DECIDING_STATE
end
